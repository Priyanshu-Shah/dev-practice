<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>User Page</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles.css">
        <script src="https://cdn.tailwindcss.com"></script>

    </head>
    <body>
        <div class="w-full h-full bg-zinc-900 p-10 text-white">
            <a class="text-blue-500" href="/">Back to Home</a>
            <h1 class="mb-3 text-3xl tracking-tighter">All Users</h1>
            <div class="users flex gap-3 flex-wrap">
                <% users.forEach(user => { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hiddem">
                            <img class="w-full h-full object-cover rounded-lg" src="<%= user.image%>">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email%></h5>
                        <div class="flex gap-3 mt-10">
                            <a class="text-zinc-600" href="/edit/<%=user._id%>">Edit User</a>
                            <a class="text-red-500" href="/delete/<%=user._id%>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </body>
</html>
